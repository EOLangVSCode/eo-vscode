{
	"name": "eo-vscode",
	"description": "A language server for the Elegant Objects language",
	"author": "Eduardo Fernandes, Anatoliy Baskakov, Roman Nabiullin",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/EOLangVSCode/eo-vscode"
	},
	"categories": [],
	"keywords": [
		"TODO"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:eo"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "eo",
				"aliases": [
					"EO",
					"eo"
				],
				"extensions": [
					".eo"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"light": "./icons/pluginIcon.svg",
					"dark": "./icons/pluginIcon.svg"
				}
			}
		],
		"grammars": [
			{
				"language": "eo",
				"scopeName": "main.eo",
				"path": "./syntaxes/eo.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh",
		"convert-yaml": "npx js-yaml syntaxes/eo.tmLanguage.yaml > syntaxes/eo.tmLanguage.json"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@types/vscode": "^1.63.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.13.0",
		"js-yaml": "^4.1.0",
		"mocha": "^9.2.1",
		"typescript": "^4.8.4",
		"vsce": "^2.13.0"
	}
}
